<div class="d-flex flex-column align-items-center mt-3">
  <div class="col-xl-7 col-lg-8 col-md-10 col-sm-11 post-card">
    <div class="card">
      <div class="card-header">
        <h4>編集画面</h4>  
      </div>
      <div class="card-body">
        <div class="card-text text-center mb-5">
          <h5>今日の取引明細</h5>
        </div>
        <%= form_with model: @post do |f| %>

          <div class="form-group row mt-2">
            <div class="col">
              <%= f.label :コード %>
              <%= f.text_field :stock_code, placeholder: "1357", class: "form-control" %>
            </div>
          </div>
          <div class="form-group row mt-2">
            <div class="col">
              <%= f.label :銘柄 %>
              <%= f.text_field :stock_name, placeholder: "ハードバンク", class: "form-control" %>
            </div>
          </div>
          <div class="form-group row mt-2">
            <div class="col">
              <%= f.label :損益 %>
              <%= f.text_field :profit, placeholder: "13500", class: "form-control" %>
            </div>
          </div>
          <div class="form-group row mt-2">
            <div class="col">
              <%= f.label :メモ %>
              <%= f.text_area :memo, placeholder: "ワンナイトスイング", class: "form-control" %>
            </div>
          </div>
          <div class="form-group row mt-2">
            <div class="col">
              <%= f.fields_for :photos do |i| %>
                <%= i.file_field :image %>
              <% end %>
            </div>
          </div>
          <%= f.submit "更新", class: "btn btn-primary" %>

        <% end %>
      </div>
    </div>
  </div>
</div>   
