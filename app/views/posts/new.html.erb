<div class="d-flex flex-column align-items-center mt-3">
  <div class="col-xl-7 col-lg-8 col-md-10 col-sm-11 post-card">
    <div class="card">
      <div class="card-header">
        <h4>投稿画面</h4>  
      </div>
      <div class="card-body">
        <div class="card-text text-center mb-5">
          <h5>取引明細</h5>
        </div>
        <%= form_with model: @post, local: true do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
          <div class="form-group row mt-2">
            <div class="col">
              <%= f.label :取引日（必須）, class: "form-label text-danger"  %>
              <%= f.date_field :traded_at, class: "form-control" %>
            </div>
          </div>
          <div class="form-group row mt-2">
            <div class="col">
              <%= f.label :トレード（必須）, class: "form-label text-danger" %>
              <%= f.select :trade, [["日本株", "日本株）"],["米国株", "米国株）"],["投資信託", "投資信託）"],["海外ETF", "海外ETF）"],  ["FX", "FX）"], ["CFD", "CFD）"], ["その他", "その他）"]], include_blank: "選択して下さい" , class: "form-select" %>
            </div>
          </div>
          <div class="form-group row mt-2">
            <div class="col">
              <%= f.label :損益（必須）, class: "form-label text-danger"  %>
              <%= f.text_field :profit, placeholder: "13500", class: "form-control" %>
            </div>
          </div>
          <div class="form-group row mt-2">
            <div class="col">
              <%= f.label :株）コード（任意）, class: "form-label"  %>
              <%= f.text_field :stock_code, placeholder: "1357", class: "form-control" %>
            </div>
          </div>
          <div class="form-group row mt-2">
            <div class="col">
              <%= f.label :株）銘柄【６文字以内】（任意）, class: "form-label"  %>
              <%= f.text_field :stock_name, placeholder: "ハードバンク", class: "form-control" %>
            </div>
          </div>
          <div class="form-group row mt-2">
            <div class="col">
              <%= f.label :ＦＸ）通貨（任意）, class: "form-label" %>
              <%= f.select :currency, [["米ドル/円", "米ドル/円"], ["ユーロ/円", "ユーロ/円"], ["英ポンド/円", "英ポンド/円"], ["豪ドル/円", "豪ドル/円"], ["ユーロ/米ドル", "ユーロ/米ドル"], ["英ポンド/米ドル", "英ポンド/米ドル"]], include_blank: "選択して下さい", class: "form-select" %>
            </div>
          </div>
          <div class="form-group row mt-2">
            <div class="col">
              <%= f.label :ＣＦＤ）指数（任意）, class: "form-label" %>
              <%= f.select :stock_index, [["日経225", "日経225"], ["NYダウ30", "NYダウ30"], ["S&P500", "S&P500"], ["NASDAQ100", "NASDAQ100"], ["ユーロ50", "ユーロ50"], ["インドNIF", "インドNIF"]], include_blank: "選択して下さい", class: "form-select" %>
            </div>
          </div>
          <div class="form-group row mt-2">
            <div class="col">
              <%= f.label :メモ（任意）, class: "form-label"  %>
              <%= f.text_area :memo, placeholder: "投資信託：楽天･NASDAQ-100", class: "form-control" %>
            </div>
          </div>
          <div class="form-group row mt-2">
            <div class="col">
              <i class="fa-solid fa-camera"></i>
              <%= f.fields_for :photos do |i| %>
                <%= i.file_field :image, class: "form-control-file" %>
              <% end %>
            </div>
          </div>
          <%= f.submit "投稿", class: "btn btn-primary" %>

        <% end %>
      </div>
    </div>
  </div>
</div>   
