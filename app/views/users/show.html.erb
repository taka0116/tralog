<div class="profile-wrap">
  <div class="d-flex flex-column align-items-center">
    <div class="row profile-top">
      <div class="col-md-12">
        <div class="row justify-content-center">
          <h2 class="user_name"><%= @user.name %></h2>
          <% if @user = current_user %>
            <%= link_to "プロフィールを編集", edit_user_registration_path, class: "btn btn-outline-dark common-btn edit-profile-btn" %>
            <button type="button" class="setting" data-toggle="modal" data-target="#exampleModal"></button>
          <% end %>

          <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">設定</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                  </button>
                </div>
                <div class="list-group text-center">
                  <%= link_to "サインアウト", destroy_user_session_path, method: :delete, class: "list-group-item list-group-item-action" %>
                  <%= link_to "キャンセル", "#", class: "list-group-item list-group-item-action", "data-dismiss": "modal" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  
    <div class="row profile-result">
      <div class="col-md-12 text-center">
        <table class="table table-bordered">
          <thead class="table-success">
            <tr>
              <th colspan="2" class="table-title">損益状況データ</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="row">今日の損益</th>
              <% if @today_profit < 0 %>
                <td style="color: red;"><%= number_to_currency(@today_profit, :locale => 'jp') %></td>
              <% else %>
                <td style="color: blue;"><%= number_to_currency(@today_profit, :locale => 'jp') %></td>
              <% end %>
            </tr>
            <tr>
              <th scope="row">今週の損益</th>
              <% if @week_profit < 0 %>
                <td style="color: red;"><%= number_to_currency(@week_profit, :locale => 'jp') %></td>
              <% else %>
                <td style="color: blue;"><%= number_to_currency(@week_profit, :locale => 'jp') %></td>
              <% end %>
            </tr>
            <tr>
              <th scope="row">今月の損益</th>
              <% if @month_profit < 0 %>
                <td style="color: red;"><%= number_to_currency(@month_profit, :locale => 'jp') %></td>
              <% else %>
                <td style="color: blue;"><%= number_to_currency(@month_profit, :locale => 'jp') %></td>
              <% end %> 
            </tr>
            <tr>
              <th scope="row">今年の損益</th>
              <% if @year_profit < 0 %>
                <td style="color: red;"><%= number_to_currency(@year_profit, :locale => 'jp') %></td>
              <% else %>
                <td style="color: blue;"><%= number_to_currency(@year_profit, :locale => 'jp') %></td>
              <% end %> 
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

